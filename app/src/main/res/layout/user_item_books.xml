                    android:layout_height="wrap_content"
                    android:layout_marginStart="47dp"
                    android:text="Class"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


