<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homefragdonor"
    android:orientation="horizontal"
    tools:context=".dish_res">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="260dp"
                app:cardBackgroundColor="#D3D1D1"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button_food_order"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/restaurant"
                        tools:ignore="SpeakableTextPresentCheck" />
                    <!--                tools:ignore="SpeakableTextPresentCheck" />-->


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="260dp"
                app:cardBackgroundColor="#D3D1D1"
                app:cardCornerRadius="15dp"

                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button_clothes_order"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/clothes"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="260dp"
                app:cardBackgroundColor="#D3D1D1"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button_book_order"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/image_book"
                        tools:ignore="SpeakableTextPresentCheck" />
                    <!--                tools:ignore="SpeakableTextPresentCheck" />-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </HorizontalScrollView>
</RelativeLayout>
